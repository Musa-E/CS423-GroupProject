<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/part_editor_controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="2dp"
    android:orientation="horizontal">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_active_pen"
        android:theme="@style/SCBSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/editor_enable_active_pen" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:contentDescription="undo"
        android:id="@+id/editor_undo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_undo"
        android:tooltipText="@string/editor_undo"
        tools:targetApi="o" />

    <ImageButton
        android:contentDescription="redo"
        android:id="@+id/editor_redo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_redo"
        android:tooltipText="@string/editor_redo"
        tools:targetApi="o" />

    <ImageButton
        android:contentDescription="trash"
        android:id="@+id/editor_clear_content"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_delete"
        android:tooltipText="@string/editor_clear"
        tools:targetApi="o" />

</LinearLayout>
