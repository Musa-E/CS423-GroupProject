<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"> <!-- You can reduce the padding if it's too much -->

    <!-- ImageView for the gesture image -->
    <ImageView
        android:id="@+id/gestureImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/gestures_help_button"
        android:scaleType="centerInside"
        android:src="@drawable/undo_gesture_help_icon" />

    <!-- Horizontal layout for navigation buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Hidden "Previous" button -->
        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:visibility="gone"/> <!-- Initially hidden -->

        <!-- Spacer to push buttons apart -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <!-- Next button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>

</LinearLayout>